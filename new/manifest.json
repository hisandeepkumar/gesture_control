{
  "manifest_version": 3,
  "name": "YouTube Keyboard Gestures",
  "version": "5.0",
  "description": "Control YouTube with keyboard-triggered gestures - No Camera Required",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
